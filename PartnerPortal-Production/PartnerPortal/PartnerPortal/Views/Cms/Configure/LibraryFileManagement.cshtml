                <tr>
                    <td style="height: 20px;" colspan="2">&nbsp;</td>
                </tr>
                <tr>
                    <td style="border: none; font-weight: bold;">Title</td>
                    <td style="border: none;"><input type="text" ng-model="File.Title" class="form-control " style="width: 81%; padding: 5px; height: 38px;"/></td>
                </tr>
                <tr>
                    <td style="height: 20px;" colspan="2">&nbsp;</td>
                </tr>
                <tr>
                    <td style="border: none; font-weight: bold;">Title (Spanish)</td>
                    <td style="border: none;"><input type="text" ng-model="File.TitleSpanish" class="form-control " style="width: 81%; padding: 5px; height: 38px;"/></td>
                </tr>
                <tr>
                    <td style="height: 20px;" colspan="2">&nbsp;</td>
                </tr>
                <tr>
                    <td style="border: none; font-weight: bold;">Description</td>
                    <td style="border: none;">
                        <textarea ng-model="File.Description" class="form-control " style="width: 81%; padding: 5px; height: 38px;" rows="5"></textarea>
                    </td>
                </tr>
                <tr>
                    <td style="height: 20px;" colspan="2">&nbsp;</td>
                </tr>
                <tr>
                    <td style="border: none; font-weight: bold;">Description (Spanish)</td>
                    <td style="border: none;">
                        <textarea ng-model="File.DescriptionSpanish" class="form-control " style="width: 81%; padding: 5px; height: 38px;" rows="5"></textarea>
                    </td>
                </tr>
                <tr>
                    <td style="height: 20px;" colspan="2">&nbsp;</td>
                </tr>
