    <div id="dialog_uploadMedia" style="display: none;"></div>

    <input type="hidden" id="mediaUploaderUploadType" value="1"/>
    <script type="text/javascript">
        var uploaderOpenedBy = {};
        var logoPath = "";
        $(document).ready(function() {
            $(".ui-dialog").css("height", $(window).height() - 60);

            $("#displayImage").click(function() {
                $("#dialog_uploadMedia").empty();
                $("#mediaUploaderUploadType").val(3);
                var template = '@Url.Content("~/Templates/CMS/Editor/UploadMediaTemplate.html")';
                $("#dialog_uploadMedia").load(template);
                uploaderOpenedBy = $(this);
                var dialog = $("#dialog_uploadMedia").dialog({
                    autoOpen: false,
                    width: "96%",
                    modal: true,
                    resizable: false,
                    position: [30, 30],
                    dialogClass: "no-titlebar",
                    create: function(event) {
                        $(event.target).parent().css('position', 'fixed');
                        $(".ui-widget-header").hide();
                    },
                    open: function() { $(".ui-widget-header").hide(); },
                    close: function() {
                        $(".ui-widget-header").show();
                        if (selectedUploadedObjectsToUse.length > 0) {
                            uploaderCallback(1, selectedUploadedObjectsToUse[0].FilePath);
                        }
                    }
                });
                dialog.dialog("open");
            });

            $("#displayFile").click(function() {
                $("#dialog_uploadMedia").empty();
                $("#mediaUploaderUploadType").val(3);
                var template = '@Url.Content("~/Templates/CMS/Editor/UploadMediaTemplate.html")';
                $("#dialog_uploadMedia").load(template);
                uploaderOpenedBy = $(this);
                var dialog = $("#dialog_uploadMedia").dialog({
                    autoOpen: false,
                    width: "96%",
                    modal: true,
                    resizable: false,
                    position: [30, 30],
                    dialogClass: "no-titlebar",
                    create: function(event) {
                        $(event.target).parent().css('position', 'fixed');
                        $(".ui-widget-header").hide();
                    },
                    open: function() { $(".ui-widget-header").hide(); },
                    close: function() {
                        $(".ui-widget-header").show();
                        if (selectedUploadedObjectsToUse.length > 0) {
                            uploaderCallback(2, selectedUploadedObjectsToUse[0].FilePath);
                        }
                    }
                });
                dialog.dialog("open");
            });

        });

        function uploaderCallback(type, filePath) {
            if ($(uploaderOpenedBy) != undefined) {
                if (type === 1) {
                    document.getElementById("imgF").src = filePath;
                    logoPath = filePath;
                    if (logoPath != undefined && logoPath != "") {
                        $(".fusionb-remove-button1" + type).show();
                        $(".fusionb-upload-button1" + type).hide();
                    } else {
                        $(".fusionb-remove-button1" + type).hide();
                        $(".fusionb-upload-button1" + type).show();
                    }
                }
                if (type === 2) {
                    document.getElementById("filePath").value = filePath;
                    if (filePath != undefined && filePath != "") {
                        $(".fusionb-remove-button2" + type).show();
                        $(".fusionb-upload-button2" + type).hide();
                    } else {
                        $(".fusionb-remove-button2" + type).hide();
                        $(".fusionb-upload-button2" + type).show();
                    }
                }
            }
        }
    </script>

    <script>
        app.controller("FileManagementController", function($controller, $scope, $http, $rootScope,
            notificationFactory, validationFactory, dbUtilFactory, $window, $modal, $log) {
            $scope.FileTypes = [];
            $scope.FilteredFileTypes = [];
            $scope.LibraryCategories = [];
            $scope.FilteredLibraryCategories = [];
            $scope.Files = [];
            $scope.File = {};

            $scope.PartnerTypes = [];

            $scope.inIt = function() {
                var url = rootUrl + 'api/ppcmsapi/GetFileTypes';
                dbUtilFactory.get(url, "", function(d) {
                    $scope.FileTypes = d;
                }, '', 'Error getting data ');

                url = rootUrl + 'api/ppcmsapi/GetLibraryCategories';
                dbUtilFactory.get(url, "", function(d) {
                    $scope.LibraryCategories = d;
                }, '', 'Error getting data ');

                url = rootUrl + 'api/ppcmsapi/GetLibraryFiles';
                dbUtilFactory.get(url, "", function(d) {
                    $scope.Files = d;
                }, '', 'Error getting data ');

                url = rootUrl + 'api/ppcmsapi/GetPartnerTypesForPermission';
                dbUtilFactory.get(url, "", function(d) {
                    $scope.PartnerTypes = d;

                }, '', 'Error getting data ');
            };

            $scope.inIt();

            $scope.SetRowClicked = function (item) {
                var result = $.grep($scope.Files, function (e) { return e.LibraryType == item.LibraryType });
                $(result).each(function (key, value) {
                    value.Expanded = !value.Expanded;
                });
            }

            $scope.removeLogo = function() {
                logoPath = "";
                $(".fusionb-remove-button1").hide();
                $(".fusionb-upload-button1").show();
                document.getElementById("imgF").src = logoPath;
            };

            $scope.removeFile = function() {
                $(".fusionb-remove-button2").hide();
                $(".fusionb-upload-button2").show();
                $scope.File.FilePath = "";
            };

            $scope.SetFilteredFileTypeList = function() {
                $scope.FilteredFileTypes = [];
                var obj = {};
                for (var t = 0; t < $scope.FileTypes.length; t++) {
                    obj = {};
                    obj.Id = $scope.FileTypes[t].Id;
                    obj.Title = $scope.FileTypes[t].FileType;
                    obj.IsSelected = ($scope.File.FileTypeId === obj.Id);
                    $scope.FilteredFileTypes.push(obj);
                }

                obj = {};
                obj.Id = 0;
                obj.Title = 'Other';
                obj.IsSelected = ($scope.File.FileTypeId === 0);
                $scope.FilteredFileTypes.push(obj);
            }

            $scope.TypeChoosen = function() {
                var count = 0;
                $scope.FilteredLibraryCategories = [];

                for (var i = 0; i < $scope.LibraryCategories.length; i++) {
                    //alert($scope.LibraryCategories[i].LibraryType);
                    //alert($scope.File.LibraryType);
                    if ($scope.LibraryCategories[i].LibraryType === $scope.File.LibraryType) {
                        var obj = {};
                        obj.Id = $scope.LibraryCategories[i].Id;
                        obj.Title = $scope.LibraryCategories[i].CategoryName;
                        obj.IsSelected = ($scope.File.LibraryCategoryId === obj.Id);
                        $scope.FilteredLibraryCategories.push(obj);
                    }
                }
            }

            $scope.CategoryChoosen = function() {
                var count = 0;
                $scope.SectionsOrders = [];
                for (var k = 0; k < $scope.Files.length; k++) {
                    if ($scope.Files[k].LibraryCategoryId == $scope.File.LibraryCategoryId) {
                        count = count + 1;
                    }
                }
                var selectedSet = false;
                for (var i = 0; i <= count; i++) {
                    var obj = {};
                    obj.Id = i + 1;
                    obj.Title = i + 1;
                    obj.IsSelected = false;
                    if (obj.Id == $scope.File.SortOrder) {
                        obj.IsSelected = true;
                        selectedSet = true;
                    }
                    $scope.SectionsOrders.push(obj);
                };

                if (!selectedSet) {
                    $scope.SectionsOrders[count].IsSelected = true;
                }

            }

            $scope.AddFile = function() {
                $scope.File = {};
                $scope.File.Id = 0;
                $scope.File.LibraryType = "";
                $scope.File.LibraryCategoryId = "";
                $scope.File.FileTypeId = null;
                $scope.File.Title = "";
                $scope.File.Description = "";
                $scope.File.FilePath = "";
                $scope.File.FileThumbnailPath = "";
                $scope.File.SortOrder = "";
                $scope.File.AllowedPartnerTypes = "";

                $scope.SetFilteredFileTypeList();

                var logoPath = "";
                document.getElementById("imgF").src = "";
                $(".fusionb-remove-button1").hide();
                $(".fusionb-upload-button1").show();
                $(".fusionb-remove-button2").hide();
                $(".fusionb-upload-button2").show();
                $("#displayTopicList").slideUp("slow", function() {
                    $("#UpdateTopic").slideDown("slow", function() {
                        // Animation complete.
                    });
                });
            };

            $scope.CancelUpdate = function() {
                $("#UpdateTopic").slideUp("slow", function() {
                    $("#displayTopicList").slideDown("slow", function() {
                        // Animation complete.
                    });
                });
            };

            $scope.EditItem = function(item) {
                $scope.File = item;

                
                $scope.PartnerTypes = item.PartnerTypes;
                $scope.TypeChoosen();
                $scope.CategoryChoosen();
                $scope.SetFilteredFileTypeList();
                logoPath = $scope.File.FileThumbnailPath;
                document.getElementById("imgF").src = logoPath;

                if (logoPath != undefined && logoPath != "") {
                    $(".fusionb-remove-button1").show();
                    $(".fusionb-upload-button1").hide();
                } else {
                    $(".fusionb-remove-button1").hide();
                    $(".fusionb-upload-button1").show();
                }
                if ($scope.File.FilePath != undefined && $scope.File.FilePath != "") {
                    $(".fusionb-remove-button2").show();
                    $(".fusionb-upload-button2").hide();
                } else {
                    $(".fusionb-remove-button2").hide();
                    $(".fusionb-upload-button2").show();
                }
                $("#displayTopicList").slideUp("slow", function() {
                    $("#UpdateTopic").slideDown("slow", function() {
                        // Animation complete.
                    });
                });
            };

            $scope.DeleteItem = function(item) {
                var text = "You won't be able to revert this!";
                swal({
                        title: "Are you sure?",
                        text: text,
                        type: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#DD6B55",
                        confirmButtonText: "Yes, delete the file type.",
                        closeOnConfirm: true
                    },
                    function(isConfirm) {
                        if (isConfirm) {
                            dbUtilFactory.postp(rootUrl + 'api/ppcmsapi/DeleteLibraryiles/', item, function () {
                                swal(
                                    'Deleted!',
                                    'The file type has been deleted.',
                                    'success'
                                );
                                $scope.inIt();
                            }, '', 'Error getting data ');
                        }
                    });
            };

            $scope.SaveFile = function() {
                if ($scope.File.LibraryType == "") {
                    swal("Library Type is required");
                    return;
                }
                if ($scope.File.LibraryCategoryId == "") {
                    swal("Library Category is required");
                    return;
                }
                $scope.File.FilePath = document.getElementById("filePath").value;
                if ($scope.File.FilePath == "") {
                    swal("File is required");
                    return;
                }
                var perms = "";
                for (var i = 0; i < $scope.PartnerTypes.length; i++) {
                    if ($scope.PartnerTypes[i].IsAssigned) {
                        if (perms == "") {
                            perms = $scope.PartnerTypes[i].PartnerType;
                        } else {
                            perms = perms + "," + $scope.PartnerTypes[i].PartnerType;
                        }
                    }
                }

                if ($scope.File.FileTypeId =="") {
                    $scope.File.FileTypeId = null;
                }

                $scope.File.AllowedPartnerTypes = perms;
                $scope.File.FileThumbnailPath = logoPath;
