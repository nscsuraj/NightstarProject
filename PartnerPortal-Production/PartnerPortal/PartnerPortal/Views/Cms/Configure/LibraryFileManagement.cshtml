            <table style="text-align: left; width: 100%; padding: 10px; color: #000000;">
                <tr>
                    <td style="border: none; font-weight: bold;">Library File For (Page)</td>
                    <td style="border: none;">
                        <select class="form-control " style="width: 81%; padding: 5px; height: 38px;" ng-model="File.LibraryType" ng-change="TypeChoosen()">
