@model PartnerPortal.Models.PageInfoVM
@{
    ViewBag.Title = Model.TitleTag;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MetaTags
{
    <link rel="canonical" href="https://www.starmicronics.com/partnerportal/pages/opportunities/" />
    @foreach (var m in Model.Gateway.MetaTags)
    {
        if (m.TagType == 0)
        {
            <meta property="og:@m.TagKey" content="@m.TagValue" />
        }
        else
        {
            <meta name="@m.TagKey" content="@m.TagValue" />
        }

    }
}

@section scripts
{
    <script>
        function backToNotificationCenter() {
            window.location.href = root + "pages/Notifications";
        }
    </script>
}
@section MainContent {
    <style>

        .btnExport {
            width: 100%;
            min-height: 40px;
            color: #ffffff;
            font-weight: normal;
            display: inline-block;
            text-align: center;
            background-color: #133B7C;
            font-size: 10pt;
            border-radius: 5px;
            font-weight:bold;
        }
    </style>
    <div class="fusion-fullwidth fullwidth-box" style="text-align: left; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">
        <div class="fusion-row" id="displayResellers">
            <div style="width: 100%; display: inline-block; text-align: left; padding-top: 30px; color: #3D80EB;">
                <div style="width: 200px; display: inline-block; float: right; font-size: 12pt; font-weight: normal; color: #133B7C; margin-top: 20px;">
                    <div class="btnExport" onclick="backToNotificationCenter()" style="cursor: pointer;"> <span style="display: inline-block; margin-top: 8px; margin-left: 5px;"><< Notification Center</span></div>
                </div>
                <div style="width: 100%; height: 30px; color: #2551A4; margin-top: 40px;margin-bottom:20px; font-size: 22pt; font-weight: bold;" class="twelveMonthReseller">
                    @Model.Title
                </div>
                <div style="width: 100%; height: 1px; background-color: #2551A4; font-size: 12pt; font-weight: normal;line-height: 1.5">

                </div>
            </div>
        </div>
        <div style="width: 100%;">
            <br />
            @{ Html.RenderAction("NotificationDetail", "Utility", new { id = Model.Id }); }
        </div>
        </div>

}

@section RightPanelPartial{
    @Html.Partial("Partials/RightPanelPartial")
}
