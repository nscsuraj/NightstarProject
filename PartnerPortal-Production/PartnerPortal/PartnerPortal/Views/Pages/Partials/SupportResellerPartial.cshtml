<script>


        app.controller("StarSupportResellerController", function ($controller, $scope, $http, $sce,
            notificationFactory, $location,
            validationFactory, filterFilter, helperFactory, dbUtilFactory) {


            $scope.Library = [];
            $scope.showLoading = true;
            $scope.showNoData = false;
            $scope.showData = false;

            $scope.articleHover = function () { }

            $scope.formatDate = function (date, format) {
                if (date == undefined) return '';
                return $.format.date(new Date(date), format);
            };

            $scope.getLibrary = function () {
                var url = root + 'api/ppcmsapi/GetLibraryFilesForSupport';
                dbUtilFactory.get(url, "", function (d) {
                    $scope.Library = d;
                    $scope.showLoading = false;
                    if (d.length <= 0) {
                        $scope.showNoData = true;
                    } else {
                        $scope.showData = true;
                        $("#dataContainer").show();
                    }

                }, '', 'Error getting data ');
            };
            $scope.getLibrary();

            $scope.ShowLibraryFiles = function (index, show) {
                if (show) return true;
                if (!show) {
                    if (index < 4) return true;

                }
                return false;
            }

        });
    </script>
