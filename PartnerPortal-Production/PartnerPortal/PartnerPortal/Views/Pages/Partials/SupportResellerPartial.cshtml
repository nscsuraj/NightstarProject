<script>

    function articleMouseIn(ctrl) {
        var h = $(ctrl).find(".entry-media-wrapper").height();
        $(ctrl).find(".czr-caption").height(h - 10);
        $(ctrl).find(".entry-media-wrapper").hide();
        $(ctrl).find(".czr-caption").show();
    }

    function articleMouseOut(ctrl) {
        var h = $(ctrl).find(".entry-media-wrapper").height();
        $(ctrl).find(".czr-caption").height(h - 10);
        $(ctrl).find(".entry-media-wrapper").show();
        $(ctrl).find(".czr-caption").hide();
    }
</script>
