                    swal({
                        title: "Done",
                        text: "Thank you for requesting a demo unit. A Star expert will respond within two business days.",
                        type: "success"
                    }).then(function () {
                        $scope.showProcessing = false;
                        window.location.href = redUrl;
                    });
                }, '', 'Error getting data ');




