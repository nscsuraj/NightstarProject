                        type: "error"
                    });
                    return false;
                }
                if ($scope.Case.Product_Name__c == "") {
                    swal({
                        title: "Error",
                        text: "Please chose product.",
                        type: "error"
                    });
                    return false;
                }
                if ($scope.Case.Product_Color__c == "") {
                    swal({
