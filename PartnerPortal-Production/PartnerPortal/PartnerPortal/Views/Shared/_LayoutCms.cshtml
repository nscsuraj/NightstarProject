@using System.Configuration
@using AutoMapper
<!DOCTYPE html>
<html lang="en" style="width: 100%; height: 100%;" ng-app="app">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Images/star_icon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width"/>
    <script>
        var rootUrl = '@Url.Content("~")';
        //var root = '@Url.Content("~")';
        //var root = 'http://localhost/';
        var root = 'http://mdev.starmicronics.com/';
        var cmsroot = '@Url.Content("~/WPFiles/")';
        var pageUrl = '@Url.Content("~/Pages")';
        var domain = '@string.Format("{0}://{1}",HttpContext.Current.Request.Url.Scheme, HttpContext.Current.Request.Url.Host)';
        var virtualDirectory = '@ConfigurationManager.AppSettings["VirtualDirectory"]';
    </script>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Maincss")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/customjs")
    @RenderSection("scripts", required: false)
</head>
<body style="width: 100%; height: 100%;">
<div  style="width: 100%; height: 100%;">
    <div style="width: 100%; background-color: #ffffff;">
        <div class="leftFloat width100p cmsLogo" style="width: 100%; background-color: #ffffff;"></div>
    </div>
    <div style="width: 100%; background-color: #4f7db4;color: #ffffff; font-style: italic; font-size: 12pt; border-bottom: 4px solid #ffffff; box-shadow: 3px 3px 10px #000000;">
        <div style="font-weight: bold;text-shadow: 2px 2px #000000;">Starmicronics - Partner Portal</div>
    </div>
    <div style="height: 86%;">
        @RenderSection("featured", required: false)
        <table style="width: 100%; height: 100%" cellpadding="0" cellspacing="0">
            <tr>
                <td style="width: 18%; background-color: #4f7db4; vertical-align: top;border-right: 4px solid #ffffff;">
                    @{
                        Html.RenderPartial("Partials/_LeftMenuCMS");
                    }
                </td>
                <td style="vertical-align: top; padding: 5px;">@RenderSection("MainContent", required: false)</td>
            </tr>
        </table>
    </div>    
</div>
@RenderSection("AngularScripts", required: false)
</body>
</html>
